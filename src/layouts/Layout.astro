---
import "../styles/global.css";
import Footer from "../components/Footer/index.vue";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Your pomodoro app for better productivity!"
    />

    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
  </head>
  <body
    class="flex flex-col items-center justify-start gap-4 p-4 w-screen overflow-x-hidden min-h-screen"
  >
    <header>
      <h1 class="flex flex-row gap-2 justify-center items-center">
        PomoKoch <img src="/favicon.ico" width="32px" />
      </h1>
    </header>
    <slot />
    <Footer />
  </body>
</html>

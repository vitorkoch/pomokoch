---
import Layout from "../layouts/Layout.astro";
import Timer from "../components/Timer/index";
import MusicIframe from "../components/MusicIframe/index.vue";
---

<Layout title="PomoKoch">
  <main>
    <h1 class="flex flex-row gap-2 justify-center items-center">
      PomoKoch <img src="/favicon.ico" width="32px" />
    </h1>
    <div class="flex flex-col items-center justify-center gap-2">
      <Timer.Root client:only>
        <Timer.Modes client:only />
        <Timer.Time client:only />
        <Timer.Percentage client:only />
        <Timer.Actions client:only />
      </Timer.Root>
      <MusicIframe />
    </div>
  </main></Layout
>
